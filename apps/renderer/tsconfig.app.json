{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,         // Enables the project as a composite project
    "declaration": true,       // Ensures declaration files (.d.ts) are emitted
    "declarationMap": true,   
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "files": [
    "../../node_modules/@nx/react/typings/cssmodule.d.ts",
    "../../node_modules/@nx/react/typings/image.d.ts",
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",

    "../../libs/components/src/components/blocks/collection/**/*.json",
    "../../libs/components/src/**/*.ts",
    "../../libs/components/src/**/*.tsx"
  ]
}
