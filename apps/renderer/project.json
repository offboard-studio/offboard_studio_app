{
  "name": "renderer",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/renderer/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "release/build/renderer"
      },
      "configurations": {
        "development": {
          "mode": "development",
          "baseHref": "/"
        },
        "production": {
          "mode": "production",
          "baseHref": "./"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "renderer:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "renderer:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "renderer:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "renderer:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "renderer:build:development"
        },
        "production": {
          "buildTarget": "renderer:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../coverage/renderer"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["renderer/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "renderer:build"
      }
    }
  },
  "tags": []
}
