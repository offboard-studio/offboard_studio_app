{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["dom"],
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "resolveJsonModule": true, // Ensure JSON module resolution is enabled
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": [
    "src/pages/blocks/collection/**/*.json",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/pricing_page"
  ],
  "references": [
    { "path": "../components" },
    { "path": "../diagrams" },
    { "path": "../assets" }
  ]
}
