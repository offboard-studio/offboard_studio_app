{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["dom"],
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "resolveJsonModule": true,   // Ensure JSON module resolution is enabled
    "esModuleInterop": true 
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": [
    "src/components/blocks/collection/**/*.json",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx"
, "src/pages/pricing_page"  ]
}
